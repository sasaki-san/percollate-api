{
  "name": "percollate-api",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/main.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:ts-node": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "@nestjs/common": "^5.5.0",
    "@nestjs/core": "^5.5.0",
    "@nestjs/microservices": "^5.5.0",
    "@nestjs/testing": "^5.5.0",
    "@nestjs/websockets": "^5.5.0",
    "axios": "^0.18.0",
    "dist-exiftool": "^10.53.0",
    "filenamify": "^2.1.0",
    "jsdom": "^13.1.0",
    "make-dir": "^1.3.0",
    "node-exiftool": "^2.3.0",
    "percollate": "github:yashha/percollate#epub",
    "readability": "github:mozilla/readability",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/filenamify": "^2.0.1",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "9.11.2",
    "npm": "5.6.x"
  }
}
